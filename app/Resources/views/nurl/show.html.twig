{% extends 'base.html.twig' %}

{% block body %}
    <h1>Nurl</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ nurl.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ nurl.url }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ nurl.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ nurl.content }}</td>
            </tr>
            <tr>
                <th>Upvote</th>
                <td>{{ nurl.upvote }}</td>
                <td>
                    <a href="{{ path('nurl_upvote', { 'id' : nurl.id }) }}"><button>Upvote!</button></a>
                </td>
            </tr>
            <tr>
                <th>Downvote</th>
                <td>{{ nurl.downvote }}</td>
                <td>
                    <a href="{{ path('nurl_downvote', { 'id' : nurl.id }) }}"><button>Downvote!</button></a>
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('nurl_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
