{% extends 'base.html.twig' %}
{% block pageTitle %}Login Page{% endblock %}

{% block body %}
    <div class="container">
        <div>
            <div id="loginForm">
                <h1>Please Login</h1>
                {% if app.session.flashBag.has('error') %}
                    {{ msg }}
                {% endif %}
            </div>
            {{ form_start(form) }}
                {{ form_row(form.username) }}
                {{ form_row(form.plainPassword) }}
                <button type="submit">Login</button>
            {{ form_end(form) }}
            <hr>
            <h2>Not a member?</h2>
            <a href="{{ path('user_registration') }}"><button id="regButton">Register!</button></a>
        </div>
    </div>


{% endblock %}