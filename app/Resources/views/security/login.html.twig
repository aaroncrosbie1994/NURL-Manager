{% extends 'base.html.twig' %}
{% block pageTitle %}Login Page{% endblock %}

{% block body %}
    <div class="container">
        <div>
            <div>
                <h1>Login!</h1>
                {% if error %}
                    <div>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                {{ form_start(form) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.plainPassword) }}
                    <button type="submit">Login</button>
                {{ form_end(form) }}
            </div>
            <h2>Not a member?</h2>
            <a href="{{ path('user_registration') }}"><button id="regButton">Register!</button></a>
        </div>
    </div>


{% endblock %}